{
  "name": "@mittwald/react-ghostmaker",
  "version": "1.0.0",
  "author": "Mittwald CM Service GmbH & Co. KG <opensource@mittwald.de>",
  "contributors": [
    "Marco Falkenberg <m.falkenberg@mittwald.de>"
  ],
  "type": "module",
  "description": "Transform your async models into React Suspense-ready ghosts",
  "keywords": [
    "async",
    "domain",
    "lazy",
    "load",
    "model",
    "query",
    "react",
    "react-suspense",
    "suspense",
    "tanstack"
  ],
  "homepage": "https://github.com/mittwald/react-ghostmaker#readme",
  "repository": "github:mittwald/react-ghostmaker",
  "license": "MIT",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/esm/index.js"
    },
    "./polytype": {
      "types": "./dist/types/polytype.d.ts",
      "import": "./dist/esm/polytype.js"
    },
    "./package.json": "./package.json"
  },
  "types": "./dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm build:clean && pnpm tsc",
    "build:clean": "rimraf dist",
    "format": "prettier --write '**/*.{ts,tsx,yaml,yml,json,md,mdx}'",
    "license-check": "license-checker-rseidelsohn $*",
    "test": "pnpm test:tsc && pnpm test:lint && pnpm test:build && pnpm test:vitest && pnpm test:licenses",
    "test:build": "pnpm build",
    "test:licenses": "pnpm license-check --unknown --failOn 'UNLICENSED;UNKNOWN'",
    "test:lint": "eslint . --cache",
    "test:tsc": "tsc --noEmit",
    "test:vitest": "vitest run"
  },
  "dependencies": {
    "@sindresorhus/is": "^7.1.0",
    "context": "^3.0.33",
    "object-code": "^1.3.4",
    "type-fest": "^5.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.39.1",
    "@tanstack/react-query": "^5.90.5",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.1",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-json": "^4.0.1",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.5.0",
    "happy-dom": "^20.0.2",
    "license-checker-rseidelsohn": "^4.4.2",
    "polytype": "^0.17.0",
    "prettier": "^3.6.2",
    "prettier-plugin-jsdoc": "^1.3.3",
    "prettier-plugin-pkgsort": "^0.2.1",
    "prettier-plugin-sort-json": "^4.1.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "rimraf": "^6.1.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "@tanstack/react-query": "^5",
    "polytype": "^0.17.0",
    "react": ">=19.2"
  },
  "peerDependenciesMeta": {
    "polytype": {
      "optional": true
    }
  }
}
